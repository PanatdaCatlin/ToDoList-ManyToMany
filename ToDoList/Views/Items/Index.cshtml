<h1>To Do List</h1>
<ul>
  @foreach(var item in Model)
 {
   <li><a href='/items/@item.GetId()'>@item.GetDescription()</a></li>
   <h4>@item.GetDescription() | <a href="/items/@item.GetId()/update">Edit</a></h4>
 }
</ul>
<p><a href="/items/new">Add new item</a></p>
<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
